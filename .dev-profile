src(){
  . ~/.bashrc
}



rmlock(){
  sudo rm /var/lib/apt/lists/lock
  sudo rm /var/cache/apt/archives/lock
  sudo rm /var/lib/dpkg/loc
}

#--------------------------------------
dt(){
  cd ~/zk-scripts/dev-tools
  pull -i
  src
}


dp(){
  cd ~/zk-scripts/dev-profile
  pull
  src
}



#--------------------------------------
pull(){
  if [ "$1" = "-i" ]; then
    git stash
    git stash clear
    git pull
    chmod +x install.sh
    ./install.sh
  else
    git stash
    git stash clear
    git pull
  fi
}




#--------------------------------------
#---------------Redis------------------
#--------------------------------------

redis-start(){
  sudo service redis start
}

redis-stop(){
  sudo service redis stop
}

redis-restart(){
  sudo service redis restart
}

redis-status(){
  sudo service redis status
}

redis-cli(){
  redis-cli
}

redis-cli-stop(){
  redis-cli shutdown
}


